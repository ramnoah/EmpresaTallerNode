 <div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-1g shadow-1g text-gray-800" >
    <h1 class="text-3x1 font-bold text-center">
    Login
    </h1>

    <form action="" method="POST" class="mt-4"> 

        <input type="email" name="email" placeholder="Email"
        class="border border-gray-200 w-full text-1g placeholder-gray-500 p-2 my-2
        bg-gray-200 focus:bg-white"  required>

        <input type="password" name="password" placeholder="Password" class="border border-gray-200 w-full text-1g placeholder-gray-500 p-2 my -2 bg-gray-200 focus:bg-white" required>
        <button
        type="submit" class="rounded-md bg-red-500 w-full text-1g text-white font-semibold p-2 my-3 hover:bg-red-600 focus: bg-white-700">Send</button>

        {{#if error}}
            <p>{{error}}</p>
        {{/if}}

    </form>

</div>